@page
@model KendraMakeupArtist.Pages.Contact.ContactModel

@{
    ViewData["Title"] = "Contact";
}

<h3 class="text-align-left">Contact</h3>


<h2 class="text-align-left request-format">Kendra Capehart</h2>
<h5 class="text-align-left request-format">rebelflowerartistry@gmail.com</h5>

<br />


<h4 class="text-align-left request-format">Book an Event or Service</h4>
<hr />
<div class="row request-format">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AppointmentRequest.FirstName" class="control-label"></label>
                <input asp-for="AppointmentRequest.FirstName" class="form-control" name="FirstName" />
                <span asp-validation-for="AppointmentRequest.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentRequest.LastName" class="control-label"></label>
                <input asp-for="AppointmentRequest.LastName" class="form-control" name="LastName" />
                <span asp-validation-for="AppointmentRequest.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentRequest.AppointmentType" class="control-label"></label>
                <select asp-for="AppointmentRequest.AppointmentType" class="form-control" name="ServiceType">
                    <option value="0">Individual</option>
                    <option value="1">Training</option>
                    <option value="2">Wedding</option>
                    <option value="3">Editorial</option>
                    <option value="4">Other</option>
                </select>
                <span asp-validation-for="AppointmentRequest.AppointmentType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentRequest.AppointmentDate" class="control-label"></label>
                <input asp-for="AppointmentRequest.AppointmentDate" class="form-control" name="AppointmentDate" />
                <span asp-validation-for="AppointmentRequest.AppointmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentRequest.Location" class="control-label"></label>
                <input asp-for="AppointmentRequest.Location" class="form-control" name="Location" />
                <span asp-validation-for="AppointmentRequest.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentRequest.ContactEmail" class="control-label"></label>
                <input asp-for="AppointmentRequest.ContactEmail" class="form-control" name="ContactEmail" />
                <span asp-validation-for="AppointmentRequest.ContactEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentRequest.ContactPhone" class="control-label"></label>
                <input asp-for="AppointmentRequest.ContactPhone" class="form-control" name="ContactPhone" />
                <span asp-validation-for="AppointmentRequest.ContactPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentRequest.Message" class="control-label"></label>
                <textarea asp-for="AppointmentRequest.Message" class="form-control" name="Message" ></textarea>
                <span asp-validation-for="AppointmentRequest.Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
